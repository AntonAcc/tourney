{% extends 'base.html.twig' %}

{% block title %}Tournament {{ tournament_view.name }}{% endblock %}

{% block body %}
    <div class="block">
        <h2>Tournament "{{ tournament_view.name }}" table:</h2>
        {% if tournament_view.DayToGameListMap|length == 0 %}
            <div>No games</div>
        {% else %}
            {% for day,game_list in tournament_view.DayToGameListMap %}
                <div class="tournament_day">Day {{ day }}</div>
                {% for game in game_list %}
                    <div class="tournament_game">{{ game.TeamOne.name }} : {{ game.TeamTwo.name }}</div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
